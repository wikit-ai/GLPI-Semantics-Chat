{
    "name": "wikit/glpi-semantics-chat",
    "description": "GLPI plugin to inject Wikit Semantics Chat AI assistant widget",
    "type": "glpi-plugin",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Wikit SAS",
            "email": "dev@wikit.ai",
            "homepage": "https://www.wikit.ai"
        }
    ],
    "homepage": "https://github.com/wikitai/GLPI-Semantics-Chat",
    "support": {
        "issues": "https://github.com/wikitai/GLPI-Semantics-Chat/issues",
        "source": "https://github.com/wikitai/GLPI-Semantics-Chat"
    },
    "require": {
        "php": ">=8.0.0"
    },
    "require-dev": {
        "glpi-project/coding-standard": "^0.7",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "GlpiPlugin\\Wikitsemanticschat\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "lint": "phpcs",
        "lint:fix": "phpcbf"
    }
}
